@model FoodService.Recipe

@{
	ViewBag.Title = "Recipe Details";
}

<html>
<head>
	<h2>@ViewBag.Title.</h2>
	<link rel="stylesheet" type="text/css" href="~/Content/Recipe.css" />
	<div class="backgroundimg">
		<div class="framelogin">



			<table class="table">
				<tr>
					<th>
						<p>Minutes</p>
					</th>
					<th>
						<p>Name</p>
					</th>
					<th>
						<p>Vegetarian</p>
					</th>
					<th>
						<p>Vegan</p>
					</th>
					<th>
						<p>Cheap</p>
					</th>
					<th>
						<p>Dairy Free</p>
					</th>
					<th>
						<p>Gluten Free</p>
					</th>
					<th>
						<p>Sustainable</p>
					</th>
					<th>
						<p>Image</p>
					</th>

				</tr>

				<tr>
					
					<td>
						@*@Html.DisplayFor(modelItem => modelItem.Recipe_minutes)*@
                        @Model.Recipe_minutes
					</td>
					<td>
						@*@Html.DisplayFor(modelItem => modelItem.Recipe_name)*@
                        @Model.Recipe_name
					</td>
					<td>
						@*@Html.DisplayFor(modelItem => modelItem.Recipe_veg)*@
                        @Model.Recipe_veg
					</td>
					<td>
						@*@Html.DisplayFor(modelItem => modelItem.Recipe_vegan)*@
                        @Model.Recipe_vegan
					</td>
					<td>
						@*@Html.DisplayFor(modelItem => modelItem.cheap)*@
                        @Model.cheap
					</td>
					<td>
						@*@Html.DisplayFor(modelItem => modelItem.dairyfree)*@
                        @Model.dairyfree
					</td>
					<td>
						@*@Html.DisplayFor(modelItem => modelItem.glutenfree)*@
                        @Model.glutenfree
					</td>
					<td>
						@*@Html.DisplayFor(modelItem => modelItem.sustainable)*@
                        @Model.sustainable
					</td>
					<td>
							<img src="@Url.Content(Model.image)" style="width: 100%;">
					</td>
				</tr>


			</table>

			<div class="card card-content">
				<b>Ingredients:</b>

				@foreach (var item in Model.Ingredients)
				{
            <ol>
                <li>
                    @Html.DisplayFor(modelItem => item.Amount)
                    @Html.DisplayFor(modelItem => item.Unit)
                    @Html.DisplayFor(modelItem => item.Ingredient_name)
                </li>
            </ol>
					
				}


				<p>
					<b>Instructions:</b>

					@Html.DisplayFor(modelItem => modelItem.Instructions)
				</p>
			</div>
		</div>
        </div>

</head>
</html>


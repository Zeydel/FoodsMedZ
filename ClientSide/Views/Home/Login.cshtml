@model ClientSide.Models.LoginModel

@{
    ViewBag.Title = "Login";
}
<h2>@ViewBag.Title.</h2>


            @using (Html.BeginForm())
            {
                <div style="text-align:center">

                    <table>
                        <tr>
                            <td>
                                UserName :
                            </td>
                            <td>
                                @Html.TextBoxFor(m => m.Username)
                            </td>
                        </tr>

                        <tr>
                            <td>
                                Password :
                            </td>
                            <td>
                                @Html.TextBoxFor(m => m.Password)
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <input type="submit" value="Login" />
                            </td>
                        </tr>
                    </table>

                </div>
            }
            )
        </div>
    </div>


